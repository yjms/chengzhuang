/* pages/salesafter/salesafter.wxss */
page{
	background-color: #F6F7F8;
}
.whole{
	display: flex;
	align-items: center;
	flex-direction: column;
}
.itemData{
	width:690rpx;
	/* height:420rpx; */
	background:rgba(254,254,255,1);
	border-radius:4px;
	margin-top:30rpx; 
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: 28rpx 0;
}
.topbox{
	width: 630rpx;
	height: 306rpx;
	border-bottom:1rpx solid rgba(221,221,221,1);
	display: flex;
	padding-top: 30rpx;
	box-sizing: border-box;
}
.t_left{
	width:180rpx;
	height:180rpx;
	border-radius:4px;
	background: center no-repeat/cover;
}
.t_right{
	flex: 1;
	display: flex;
	flex-direction: column;
	padding-top:17rpx;
	padding-left:19rpx;
	box-sizing: border-box;  
}
.row1,.row2,.row3{
	display: flex;
	justify-content: space-between;
}
.row2{
	margin-top: 15rpx;
}
.row3{
	margin-top: 56rpx;
}
.row1>text:first-child{
	font-size:28rpx;
	font-family:PingFang SC;
	font-weight:400;
	color:rgba(85,85,85,1);
	width: 260rpx;
}
.row1>text:last-child{
	font-size:26rpx;
	font-family:PingFang SC;
	font-weight:500;
	color:rgba(85,85,85,1);
}
.row2>text:first-child{
	font-size:24rpx;
	font-family:PingFang SC;
	font-weight:400;
	color:rgba(170,170,170,1);
}
.row3>text{
	font-size:28rpx;
	font-family:PingFang SC;
	font-weight:400;
	color:rgba(85,85,85,1);
}
.row4{
	display: flex;
	justify-content: flex-end;
	margin-top: 30rpx;
}
.h_img{
	width: 38rpx;
	height: auto;
	margin-right: 11rpx;
}
.h_txt{
	font-size:26rpx;
	font-family:PingFang SC;
	font-weight:400;
	color:rgba(85,85,85,1);
}
.footbox{
	flex: 1;
	display: flex;
	justify-content: flex-end;
	align-items: center;
	width: 100%;
	padding: 0 28rpx;
	box-sizing: border-box;
}
.footbox>text{
	width:165rpx;
	height:58rpx;
	background:rgba(254,254,255,1);
	border:1rpx solid rgba(170,170,170,1);
	border-radius:29rpx;
	font-size:26rpx;
	font-family:PingFang SC;
	font-weight:400;
	color:rgba(85,85,85,1);
	line-height: 58rpx;
	text-align: center;
	margin-top: 28rpx;
}
.foottip{
	display: flex;
	justify-content: center;
	margin-top: 59rpx;
	margin-bottom: 100rpx;
	font-size: 26rpx;
	color: #888;
}
.hw_pop{
	width: 100vw;
	height: 100vh;
	position: fixed;
	left: 0;
	top: 0;
	display: flex;
	flex-direction: column;
	justify-content: flex-end;
	padding-bottom: 30rpx;
	box-sizing: border-box;
	align-items: center;
	background-color: rgba(0, 0, 0, 0.4);
	z-index: 99;
}
.statuspop{
	width:690rpx;
	height:460rpx;
	background:rgba(255,255,255,1);
	border-radius:8rpx;
	padding-top: 60rpx;
	box-sizing: border-box;
	display: flex;
	align-items: center;
	flex-direction: column;
}
.txt2{
	font-size:28rpx;
	font-family:PingFang SC;
	font-weight:500;
	color:rgba(34,34,34,1);
}
.poprow1,.poprow2{
	width: 100%;
	padding: 0 50rpx;
	display: flex;
	justify-content: space-between;
	box-sizing: border-box;
}
.poprow1{
	margin-top: 59rpx;
}
.poprow2{
	margin-top: 56rpx;
}
.poprow1>text,.poprow2>text{
	font-size:28rpx;
	font-family:PingFang SC;
	font-weight:400;
	color:rgba(34,34,34,1);
}
.poprow1>image,.poprow2>image{
	width:34rpx;
	height: auto; 
}
.flishbtn{
	width:260rpx;
	height:80rpx;
	background:linear-gradient(180deg,rgba(120,157,105,1) 0%,rgba(108,142,95,1) 100%);
	border-radius:15rpx;
	margin-top: 50rpx;
	font-size:32rx;
	font-family:PingFang SC;
	font-weight:400;
	color:rgba(254,254,255,1);
	display: flex;
	align-items: center;
	justify-content: center;
}
.cols1{
	color: #C44444 !important;
}
.cols0{
	color: #789D69 !important;
}