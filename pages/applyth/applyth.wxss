page{
	background-color: #F6F7F8;
}
.whole{
	padding: 20rpx 27rpx;
	box-sizing: border-box; 
}
.handbox{
	width: 100%;
	height: 238rpx;
	background:rgba(254,254,255,1);
	border-radius:12rpx;
	padding: 28rpx;
	box-sizing: border-box;
	display: flex;
}
.leftimg{
	width: 180rpx;
	height: 180rpx;
	background: center no-repeat/cover;
}
.rightinfo{
	flex: 1;
	padding-left: 20rpx;
	box-sizing: border-box;
	display: flex;
	flex-direction: column;
}
.rightinfo>text:first-child{
	width: 256rpx;
	font-size:30rpx;
	font-family:PingFang;
	font-weight:bold;
	color:rgba(75,82,72,1);
}
.txt1{
	font-size:24rpx;
	font-family:PingFang;
	font-weight:500;
	color:rgba(168,173,166,1);
	margin-top: 11rpx;
}
.shoppri{
	display: flex;
	justify-content: space-between;
	margin-top:76rpx; 
}
.shoppri>text{
	font-size:26rpx;
	font-family:PingFang;
	font-weight:bold;
	color:rgba(75,82,72,1);
}
.shoppri>.pricetxt{
	color:rgba(120,157,105,1);
}
/*  */
.items{
	width: 100%;
	background:rgba(254,254,255,1);
	border-radius:12rpx;
	margin-top: 20rpx;
	padding: 0 26rpx;
	box-sizing: border-box;
}
.items>.rowbox:not(:last-child){
	border-bottom: 1rpx solid rgba(210,215,206,1);
}
.rowbox{
	width: 100%;
	height: 128rpx;
	display: flex;
	align-items: center;
}
.rowbox>image{
	width:50rpx;
	height: auto; 
}
.rightbox{
	flex: 1;
	display: flex;
	flex-direction: column;
	padding-left: 11rpx;
	box-sizing: border-box;
	position: relative;
}
.txt2{
	font-size:30rpx;
	font-family:PingFang SC;
	font-weight:500;
	color:rgba(75,82,72,1);
}
.txt3{
	font-size:24rpx;
	font-family:PingFang SC;
	font-weight:400;
	color:rgba(168,173,166,1);
}
.txt4{
	font-size: 34rpx;
	font-family:PingFang SC;
	font-weight:400;
	color:rgba(168,173,166,1);
	position: absolute;
	right: 0;
}
.righticon{
	width: 36rpx;
	height: 36rpx;
	position: absolute;
	right: 0;
	top: 50%;
	transform: translateY(-50%);
}