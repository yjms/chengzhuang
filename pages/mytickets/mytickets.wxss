/* pages/mytickets/mytickets.wxss */
.handBox{
	width: 100%;
	height: 92rpx;
	display: flex;
	justify-content: space-between;
	padding: 0 165rpx;
	box-sizing: border-box;
	align-items: center;
}
.handBox>text{
	font-size:26rpx;
	font-family:PingFang SC;
	font-weight:400;
	color:rgba(34,34,34,1);
	position: relative;
	display: block;
	flex-grow:1;
	line-height:92rpx;
	text-align: center;
}
.handBox>.active{
	font-size:26rpx;
	font-family:PingFang SC;
	font-weight:500;
	color:rgba(165,147,127,1);
}
.handBox>.active::after{
	content: "";
	display: block;
	width: 70rpx;
	height: 4rpx;
	position: absolute;
	bottom: 20rpx;
	left: 50%;
	transform: translateX(-50%);
	background-color: #A5937F;
}
.centerBox{
	width: 100%;
	padding: 20rpx 44rpx;
	box-sizing: border-box;
}
.qlist{
	width: 100%;
	height:210rpx;
	background: center no-repeat;
	background-size: cover;
	display: flex;
}
.leftbox{
	flex-direction: column;
	width: 180rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}
.rightbox{
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: center;
	padding-left: 60rpx;
	box-sizing: border-box;
	position: relative;
}
.txt1{
	font-size:80rpx;
	font-family:PingFang SC;
	font-weight:600;
	color:rgba(34,34,34,1);
}
.txt2{
	font-size:22rpx;
	font-family:PingFang SC;
	font-weight:400;
	color:rgba(34,34,34,1);
}
.txt3{
	font-size:30rpx;
	font-family:PingFang SC;
	font-weight:600;
	color:rgba(34,34,34,1);
}
.txt4{
	font-size:24rpx;
	font-family:PingFang SC;
	font-weight:400;
	color:rgba(170,170,170,1);
	margin-top: 12rpx;
}
.txt5{
	font-size:26rpx;
	font-family:PingFang SC;
	font-weight:400;
	color:rgba(75,82,72,1);
	margin-top: 23rpx;
}
.duihuan{
	width: 118rpx;
	height: auto;
	position: absolute;
	top: 47rpx;
	right: 78rpx;
}
.centerBox>.qlist:not(:first-child){
	margin-top: 30rpx;
}
.noData{
	width: 100%;
	text-align: center;
	font-size: 24rpx;
	color: #888;
	padding-top: 150rpx;
}
.down{
